{
  "name": "lmstudio-internet-wrapper",
  "version": "1.0.0",
  "description": "Production-ready MCP-compliant tool system for LM Studio with 16 high-priority tools, security sandboxing, and comprehensive API documentation",
  "main": "server.ts",
  "scripts": {
    "start": "bun run server.ts",
    "dev": "bun --watch run server.ts",
    "build": "bun build server.ts --target node",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "type-check": "tsc --noEmit",
    "quality": "bun run format && bun run lint:fix && bun run type-check",
    "quality:check": "bun run format:check && bun run lint && bun run type-check",
    "test": "bun test",
    "clean": "rm -rf dist node_modules/.cache",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:start:dev": "pm2 start ecosystem.config.js --env development",
    "pm2:start:prod": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop lmstudio-wrapper",
    "pm2:restart": "pm2 restart lmstudio-wrapper",
    "pm2:reload": "pm2 reload lmstudio-wrapper",
    "pm2:delete": "pm2 delete lmstudio-wrapper",
    "pm2:logs": "pm2 logs lmstudio-wrapper",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "pm2:unstartup": "pm2 unstartup",
    "pm2:resurrect": "pm2 resurrect",
    "pm2:flush": "pm2 flush"
  },
  "keywords": [
    "lmstudio",
    "ai",
    "llm",
    "chat",
    "tools",
    "mcp",
    "model-context-protocol",
    "production-ready",
    "sandbox",
    "api",
    "typescript",
    "bun",
    "hono",
    "openapi",
    "insomnia",
    "postman"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-validator": "^0.7.3",
    "@types/js-yaml": "^4.0.9",
    "adm-zip": "^0.5.16",
    "hono": "^4.9.9",
    "js-yaml": "^4.1.0"
  }
}
